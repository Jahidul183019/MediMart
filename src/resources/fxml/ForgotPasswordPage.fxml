<?xml version="1.0" encoding="UTF-8"?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="ui.ForgotPasswordPage">
    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
        <Label text="Forgot Password? Choose your reset method" />
        <Button fx:id="resetByEmailBtn" text="Reset via Email" onAction="#handleResetByEmail" />
        <TextField fx:id="emailField" promptText="Enter your email" visible="false" />
        <Button fx:id="resetByPhoneBtn" text="Reset via Phone" onAction="#handleResetByPhone" />
        <TextField fx:id="phoneField" promptText="Enter your phone number" visible="false" />
        <Label fx:id="messageLabel" styleClass="message-label"/>
    </VBox>
</AnchorPane>
