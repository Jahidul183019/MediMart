<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600" prefWidth="500" styleClass="root" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="ui.LoginPage">

    <children>
        <!-- This VBox will be used as glassPane in the controller -->
        <VBox fx:id="glassPane" alignment="CENTER" spacing="20" styleClass="glass-pane" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50">

            <!-- The background image for this Pane will be set in Java code -->

            <TextField fx:id="emailField" prefHeight="26.0" prefWidth="345.0" promptText="Email" styleClass="text-field" />
            <StackPane>
                <PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field"/>
                <TextField fx:id="passwordTextField" promptText="Password"
                           styleClass="password-field"
                           visible="false" managed="false"/>
            </StackPane>

            <HBox alignment="CENTER_LEFT">
                <CheckBox fx:id="showPasswordCheck" text="Show password"/>
            </HBox>


            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="loginBtn" styleClass="btn-login" text="Login" />
                <Button fx:id="signupBtn" styleClass="btn-signup" text="Sign Up" />
            </HBox>


            <!-- Back Button -->
            <Button fx:id="backBtn" styleClass="btn-back" text="â† Back" />

            <Label fx:id="messageLabel" styleClass="message-label" />
        </VBox>
    </children>
</AnchorPane>
